{
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5214"
      },
      "Https": {
        "Url": "https://localhost:7214"
      }
    }
  },
  "ConnectionStrings": {
  "DefaultConnection": "Host=${DB_HOST};Port=${DB_PORT};Database=${DB_NAME};Username=${DB_USER};Password=${DB_PASSWORD}"
  },
  "ExternalAuthSystem": {
    "Name": "MainAuthSystem",
    "BaseUrl": "https://your-auth-system.com",
    "ApiKey": "your-api-key",
    "UserSyncEndpoint": "/api/users/sync"
  },
  "FileStorage": {
    "Type": "Local",
    "LocalPath": "wwwroot/uploads",
    "MaxFileSize": 52428800,
    "AllowedExtensions": [".pdf", ".jpg", ".jpeg", ".png", ".doc", ".docx", ".xls", ".xlsx"]
  },
  "Email": {
    "Provider": "SendGrid",
    "SendGridApiKey": "your-sendgrid-api-key",
    "FromEmail": "noreply@assettrackplus.com",
    "FromName": "Asset Track Plus",
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "SmtpUsername": "your-email@gmail.com",
    "SmtpPassword": "your-password",
    "EnableSsl": true
  },
  "RateLimit": {
    "GeneralRequestsPerMinute": 1000,
    "UploadRequestsPerMinute": 50
  },
  "BusinessRules": {
    "ExpenseAutoApprovalLimit": 500.00,
    "ExpenseManagerApprovalLimit": 2000.00,
    "ReceiptRequiredAmount": 25.00,
    "ReceiptUploadDays": 7,
    "BudgetWarningPercentage": 80,
    "BudgetBlockPercentage": 95,
    "MaintenanceReminderDays": 30,
    "MaxMedicalReimbursementPerYear": 10000.00,
    "MaxEquipmentReimbursementPerYear": 2000.00
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "AllowedHosts": "*"
}
